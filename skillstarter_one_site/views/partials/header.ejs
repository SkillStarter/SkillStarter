<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= title %> â€” Skillstarter</title>
  <link rel="stylesheet" href="/static/styles.css"/>
</head>
<body>
<header class="wrap header">
  <a class="brand" href="/">Skillstarter</a>
  <nav class="nav">
    <a href="/creators">Creators</a>
    <% if (user) { %>
      <a href="/dashboard">Dashboard</a>
      <form action="/logout" method="POST" class="inline">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <button class="btn ghost small" type="submit">Log out</button>
      </form>
    <% } else { %>
      <a class="btn small" href="/login">Log in</a>
      <a class="btn small ghost" href="/signup">Sign up</a>
    <% } %>
  </nav>
</header>
<main class="wrap">
  <% if (flash && flash.length) { %>
    <div class="flash">
      <% flash.forEach(f => { %>
        <div class="flash-item <%= f.type %>"><%= f.msg %></div>
      <% }) %>
    </div>
  <% } %>
